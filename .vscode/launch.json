{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug era5land_to_datm7_single.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/era5land_to_datm7_single.py",
            "console": "integratedTerminal",
            "args": [
                "${input:era5datafolder}/era5land_d2m_sp_ssrd_strd_t2m_tp_u10_v10_2024_01.grib",
                "--next-source-file", "${input:era5datafolder}/era5land_d2m_sp_ssrd_strd_t2m_tp_u10_v10_2024_02.grib",
                "--previous-source-file", "${input:era5datafolder}/era5land_d2m_sp_ssrd_strd_t2m_tp_u10_v10_2023_12.grib",
                // "--output-streams", "Solr", "Prec", "TPQWL",
                // "--lazy",
            ]
        },
        {
            "name": "Debug era5land_to_datm7_multiyearmonth.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/era5land_to_datm7_multiyearmonth.py",
            "console": "integratedTerminal",
            "args": [
                "--source-dir", "${input:era5datafolder}",
                "--source-files", "era5land_d2m_sp_ssrd_strd_t2m_tp_u10_v10_{year:04d}_{month:02d}.grib",
                "--output-dir", "${input:era5outputfolder}",
                "--output-files", "clmforc.ERA5Land_NorwayRect0.1x0.1.{stream}.{year:04d}_{month:02d}.nc",
                "--start-year-month", "2024", "03",
                "--end-year-month", "2024", "05",
                "--log-level", "DEBUG"
            ]
        }
    ],
    "inputs": [
        {
            "id": "era5datafolder",
            "type": "promptString",
            "description": "Absolute path to ERA5 Land data file folder"
        },
        {
            "id": "era5outputfolder",
            "type": "promptString",
            "description": "Absolute path to folder for converted output files"
        }
    ]
}